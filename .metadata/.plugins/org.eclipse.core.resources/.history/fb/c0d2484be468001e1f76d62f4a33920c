package main;

import utils.CifradoRSA;
import utils.Constantes;
import utils.Parametro;

public class CifraRSAApp {

	/**
	 * Método principal
	 * 
	 * @param args
	 * @throws Exception
	 */
	public static void main(String[] args) throws Exception {

		// Controlar parametros
		Parametro param = new Parametro(args);

		// Cifrar mensaje pasado por parámetros
		CifradoRSA cifraRSA = new CifradoRSA(param.getMensaje(), param.getPassword());
		String mensajeCifrado = cifraRSA.getMensajeCifrado(Constantes.FICHERO_CLAVES, Constantes.ALIAS);

		// Imprimir el mensaje
		System.out.println(mensajeCifrado);
	}

}
