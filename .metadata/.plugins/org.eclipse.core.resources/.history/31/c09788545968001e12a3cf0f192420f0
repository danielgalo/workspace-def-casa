package utils;

import java.io.File;
import java.security.KeyStore;
import java.security.KeyStoreException;
import java.security.PublicKey;
import java.security.cert.Certificate;
import java.util.Base64;

import javax.crypto.Cipher;

/**
 * Esta clase se encarga de cifrar un mensaje a través del algoritmo asimétrico
 * RSA
 * 
 */
public class CifradoRSA {

	/** El mensaje a cifrar */
	private String mensaje;

	/** Contraseña del archivo que contiene las keys */
	private String password;

	/**
	 * @param mensaje
	 * @param password
	 */
	public CifradoRSA(String mensaje, String password) {
		super();
		setMensaje(mensaje);
		setPassword(password);
	}

	public String getMensajeCifrado(String alias, KeyStore almacen) {
		// Archivo de claves
		;
		byte[] mensajeCifrado = null;

		try {

			almacen = KeyStore.getInstance(new File("rsakeys"), password.toCharArray());

			PublicKey clavePublica = getPublicKey(alias, almacen);

			// Cifrar
			Cipher cifrado = Cipher.getInstance("RSA");
			cifrado.init(Cipher.ENCRYPT_MODE, clavePublica);

			// Cifrar el mensaje
			mensajeCifrado = cifrado.doFinal(mensaje.getBytes());

		} catch (Exception e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}

		return Base64.getEncoder().encodeToString(mensajeCifrado);
	}

	private PublicKey getPublicKey(String alias, KeyStore almacen) throws KeyStoreException {
		// Sacar el certificado para conseguir la clave pública
		Certificate certificado = almacen.getCertificate(alias);
		PublicKey clavePublica = certificado.getPublicKey();
		return clavePublica;
	}

	/**
	 * @return the mensaje
	 */
	public String getMensaje() {
		return mensaje;
	}

	/**
	 * @param mensaje the mensaje to set
	 */
	public void setMensaje(String mensaje) {
		this.mensaje = mensaje;
	}

	/**
	 * @return the password
	 */
	public String getPassword() {
		return password;
	}

	/**
	 * @param password the password to set
	 */
	public void setPassword(String password) {
		this.password = password;
	}

}
