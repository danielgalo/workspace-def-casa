package main;

import java.io.File;
import java.security.Key;
import java.security.KeyStore;
import java.util.Base64;

import javax.crypto.Cipher;

public class DescifraRSAApp {

	public static void main(String[] args) throws Exception {

		String passwordAlias = "rsakeys";

		KeyStore almacen = KeyStore.getInstance(new File("rsakeys"), passwordAlias.toCharArray());

		Key clavePrivada = almacen.getKey(passwordAlias, passwordAlias.toCharArray());

		Cipher cifrador = Cipher.getInstance("RSA");
		cifrador.init(Cipher.DECRYPT_MODE, clavePrivada);

		// TODO FALLA ESTO >:(
		byte[] mensajeDescifrado = cifrador.doFinal(Base64.getDecoder().decode(args[0]));

		String resultado = (String) mensajeDescifrado;

		System.out.println(mensajeDescifrado.toString());

	}

}
