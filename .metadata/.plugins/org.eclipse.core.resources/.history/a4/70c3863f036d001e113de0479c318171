package com.ac1;

import java.io.IOException;
import java.io.PrintWriter;
import java.util.Scanner;

public class Maestro {

	public static void main(String[] args) {

		ProcessBuilder builder = new ProcessBuilder("java", "-cp", "bin", "com.ac1.Esclavo");

		String cadena = "";
		Scanner sc = new Scanner(System.in);
		PrintWriter writer = null;

		try {

			Process proceso = builder.inheritIO().start();
			writer = new PrintWriter(proceso.getOutputStream());

			do {
				System.out.println("Introduce una cadena (vac√≠a para terminar)");
				cadena = sc.nextLine();
				writer.write(cadena);
				writer.flush();

			} while (!cadena.isBlank());

		} catch (IOException e) {

			e.printStackTrace();

		}

		sc.close();
	}
}
