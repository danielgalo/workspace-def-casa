import java.security.MessageDigest;
import java.security.NoSuchAlgorithmException;

public class ResumeFicheroApp {

	public static void main(String[] args) throws NoSuchAlgorithmException {

		String textToHash = "Hola, este es un ejemplo de hashing en Java.";

		try {
			// Crear una instancia de MessageDigest con el algoritmo SHA-256
			MessageDigest md = MessageDigest.getInstance("SHA-256");

			// Actualizar el mensaje de entrada
			md.update(textToHash.getBytes());

			// Calcular el hash
			byte[] digest = md.digest();

			// Convertir el resultado del hash a una representaci√≥n hexadecimal
			StringBuilder hexString = new StringBuilder();
			for (byte b : digest) {
				hexString.append(String.format("%02x", b));
			}

			System.out.println("Texto original: " + textToHash);
			System.out.println("Hash SHA-256: " + hexString.toString());

		} catch (NoSuchAlgorithmException e) {
			e.printStackTrace();
		}
	}

}
