<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.bytecode.use_reflection_optimizer">false</property>
        <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="hibernate.connection.password">usuario</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/bd_neptuno2?serverTimezone=UTC</property>
        <property name="hibernate.connection.username">usuario_hibernate</property>
        <property name="hibernate.default_schema">bd_neptuno</property>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
        <property name="hibernate.format_sql">true</property>
        <property name="hibernate.search.autoregister_listeners">true</property>
        <property name="hibernate.show_sql">true</property>
        <property name="hibernate.validator.apply_to_ddl">false</property>
        <mapping resource="modelo_neptuno/Productos.hbm.xml"/>
        <mapping resource="modelo_neptuno/TotalesMensuales.hbm.xml"/>
        <mapping resource="modelo_neptuno/Importes.hbm.xml"/>
        <mapping resource="modelo_neptuno/Pedidos.hbm.xml"/>
        <mapping resource="modelo_neptuno/User.hbm.xml"/>
        <mapping resource="modelo_neptuno/Empleados.hbm.xml"/>
        <mapping resource="modelo_neptuno/Detalles.hbm.xml"/>
        <mapping resource="modelo_neptuno/Proveedores.hbm.xml"/>
        <mapping resource="modelo_neptuno/Clientes.hbm.xml"/>
        <mapping resource="modelo_neptuno/Totales.hbm.xml"/>
        <mapping resource="modelo_neptuno/Categorias.hbm.xml"/>
        <mapping resource="modelo_neptuno/Envios.hbm.xml"/>
    </session-factory>
</hibernate-configuration>
